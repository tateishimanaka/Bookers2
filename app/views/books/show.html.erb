<div class="container mt-3">
 <div class="row">
  <div class="col-md-3">
   <%= render 'books/list', user: @user %>

   <div class="mt-3">
   <h2>New book</h2>
   </div>
   <%= form_with model: @new_book, local:true do |f| %>
    <div class="form-group">
     <label for="Book-Title">Title</label>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="Book-Opinion">Opinion</label>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <button type="button" class="btn btn-success">
     <%= f.submit 'Create Book' %>
    </button>
    <% end %>
  </div>

<div class="col-md-9">
   <h2>Book detail</h2>
   <table class="table">
    <tbody>
     <tr>
      <td>
       <%= link_to user_path(@user.id) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpeg" %>
       <% end %><br/>
       <%= link_to @book.user.name, user_path(@user.id) %>
      </td>
      <td>
       <%= link_to book_path(@book.id) do %>
        <%= @book.title %>
       <% end %>
      </td>
      <td><%= @book.body %></td>
      <% if @book.user.id == current_user.id %>
      <td>
       <button type="button" class="btn btn-sm btn-success">
        <%= link_to "Edit", edit_book_path(@book.id), class: "text-light" %>
       </button>
      </td>
      <td>
       <button type="button" class="btn btn-sm btn-danger">
        <%= link_to "Destroy", books_path, method: :delete, class: "text-light" %>
       </button>
      </td>
     <% end %>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>