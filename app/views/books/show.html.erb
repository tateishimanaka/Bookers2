<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
     <%= render 'books/list', user: @user %>
     <div class="mt-3">
        <h2>New book</h2>
      </div>
      <%= form_with model: @new_book, local:true do |f| %>
        <div class="form-group">
            <label for="Book-Title">Title</label>
            <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="Book-Opinion">Opinion</label>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="button">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
　    <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
               <%= attachment_image_tag @book.user, :profile_image, size: "40x40", fallback: "no_image.jpeg" %>
              <% end %><br/>
              <%= link_to @book.user.name, user_path(@user.id) %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td>
                <div clas="button">
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success text-light" %>
                </div>
              </td>
              <td>
                <%= link_to book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
                  <button type="button" class="btn btn-sm btn-danger text-white">Destroy</button>
                <% end %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>



