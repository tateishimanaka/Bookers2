<div class="container mt-3">
 <div class="row">
  <div class="col-md-3">
  <%= render 'books/list', user: @user %>

   <div class="mt-3">
    <h2>New book</h2>
   </div>
   <%= form_with model: @book, local:true do |f| %>
    <div class="form-group">
     <label for="Book-Title">Title</label>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="Book-Opinion">Opinion</label>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <button type="button" class="btn btn-success">
     <%= f.submit 'Create Book' %>
    </button>
    <% end %>
  </div>

  <div class="col-md-9">
   <h2>Books</h2>
   <table class="table">
    <thead>
     <tr>
      <th></th>
      <th>
       <strong>Title</strong>
      </th>
      <th>
       <storng>Opinion</storng>
      </th>
     </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
     <tr>
      <td>
       <%= link_to user_path(book.user.id) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpeg" %>
       <% end %>
      </td>
      <td>
       <%= link_to book_path(book.id) do %>
        <%= book.title %>
       <% end %>
      </td>
      <td><%= book.body %></td>
     </tr>

     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>