<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
     　<a class="navbar-brand text-white" href="/">
      　<span><%= link_to "Bookers", root_path, class: "nav-link text-light" %></span>
     　</a>
       
       
     　<ul class="navbar-nav ml-auto">
     　　<% if user_signed_in? %> 
     　
      　<li class="nav-item text-white">
      　  <%=link_to users_path, class: "nav-link text-light" do %>
       　  <i class="fas fa-users">Users</i>
      　 <% end %>
      　</li>
     　
      　<li class="nav-item text-white">
       　<%= link_to books_path, class: "nav-link text-light" do %>
        　<i class="fas fa-book-open">Books</i>
         <% end %>
        </li>

        <li class="nav-item text-white">
       　<%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
          <i class="fas fa-sign-out-alt">logout</i>
         <% end %>
        </li>

      　<% else %>
      　   <li class="nav-item text-white">
         　 <%= link_to about_path_url, class: "nav-link text-light" do %>
       　    <i class="fas fa-link">About</i>
           <% end %>
      　   </li>

      　  <li class="nav-item text-white">
        　 <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
      　    <i class="fas fa-user-plus">sign up</i>
       　  <% end %>
      　  </li>
         <li class="nav-item text-white">
          <%= link_to new_user_session_path, class: "nav-link text-light" do %>
            <i class="fas fa-sign-in-alt">login</i>
          <% end %>
         </li>
     　　<% end %>
     　 </ul>
      </div>
     </nav>
    </header>
    <%= yield %>

    <footer>
     <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
        <p>CopyRight Infratop.ink</p>
       </div>
      </div>
     </div>
    </footer>
  </body>
</html>
