<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
     　<a class="navbar-brand" href="/">
      　<span><%= link_to "Bookers", root_path, class: "text-light" %></span>
     　</a>


     　<ul class="navbar-nav ml-auto">
     　　<% if user_signed_in? %>
     　　<%= link_to "Books", books_path, class: "text-light" %>
     　　
         <li class="nav-item text-white">
       　<i class="fas fa-sign-out-alt">
       　  <%= link_to "logout", destroy_user_session_path, method: :delete, class: "text-light" %></i>
          </li>
      　<% else %>
          <li class="nav-item text-white">
          <i class="fas fa-sign-in-alt"><%= link_to "login", new_user_session_path, class: "text-light" %></i>
      　   </li>

      　   <li class="nav-item text-white">
       　  <i class="fas fa-user-plus"> <%= link_to "sign up", new_user_registration_path, class: "text-light" %></i>
      　   </li>

      　   <li class="nav-item text-white">
       　  <i class="fas fa-link"><%= link_to "About", about_path_url, class: "text-light" %></i>
      　   </li>
     　　<% end %>
     　 </ul>
      </div>
     </nav>
    </header>
    <%= yield %>

    <footer>
     <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
        <p>CopyRight Infratop.ink</p>
       </div>
      </div>
     </div>
    </footer>
  </body>
</html>
